{
    "[typescript][typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.biome": "always",
            "source.organizeImports.biome": "always"
        }
    },
    "tailwindCSS.classAttributes": [
        "class",
        "className",
        "ngClass",
        ".*Class",
        ".*Variants"
    ]
}